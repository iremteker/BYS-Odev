@page
@model SchoolManagementSystem.Pages.LoginModel
@{
    ViewData["Title"] = "KTU Login";
}
<link rel="stylesheet" href="/css/styles.css">
<script src="/js/login.js"></script> <!-- JavaScript dosyasını dahil et -->

<div class="login-container">
    <div class="login-header">
        <img src="/img/ktu-logo.png" alt="KTÜ Logo" class="ktu-logo" />
        <h3>Karadeniz Teknik Üniversitesi</h3>
    </div>

    <div class="login-tabs">
        <button class="tab student active">Öğrenci</button>
        <button class="tab personnel">Personel</button>
    </div>

    <form method="post" class="login-form">
        <div class="form-group">
            <input type="text" id="email" name="Email" placeholder="E-posta" required />
        </div>
        <div class="form-group password-group">
            <input type="text" id="password" name="Password" placeholder="Şifre" required />
        </div>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-danger" role="alert">
                @Model.Message
            </div>
        }

        <button type="submit" class="submit-button">Giriş Yap</button>
    </form>
</div>
